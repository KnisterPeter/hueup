{
  "name": "hueup",
  "version": "0.1.0",
  "main": "public/index.ts",
  "repository": "git@github.com:KnisterPeter/hueup.git",
  "author": "Markus Wolf <mail@markus-wolf.de>",
  "license": "MIT",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "now dev --listen 0.0.0.0:1234",
    "clean": "rimraf ./public",
    "now-dev": "webpack-dev-server",
    "prenow-build": "yarn clean",
    "now-build": "NODE_ENV=production webpack -p"
  },
  "devDependencies": {
    "@types/react": "16.9.25",
    "@types/react-dom": "16.9.5",
    "css-loader": "3.4.2",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.0.1",
    "now": "17.1.1",
    "null-loader": "3.0.0",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "style-loader": "1.1.3",
    "ts-loader": "6.2.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-bundle-analyzer": "3.6.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-pwa-manifest": "4.2.0",
    "workbox-webpack-plugin": "5.1.2"
  },
  "dependencies": {
    "@material-ui/core": "4.9.7",
    "@material-ui/icons": "4.9.1",
    "@now/node": "1.5.0",
    "immer": "6.0.2",
    "mobx": "5.15.4",
    "mobx-react-lite": "1.5.2",
    "node-hue-api": "4.0.5",
    "preact": "10.3.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "tslib": "1.11.1",
    "typeface-roboto": "0.0.75"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "prettier": {},
  "renovate": {
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  }
}
