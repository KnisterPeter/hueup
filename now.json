{
  "builds": [
    { "src": "package.json", "use": "@now/static-build" },
    { "src": "api/**/*.ts", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api/(?<path>.*)", "dest": "/api/$path.ts" },
    { "src": "/authorize", "dest": "/" },
    { "src": "/authorized", "dest": "/" },
    { "src": "/overview", "dest": "/" },
    { "src": "/groups", "dest": "/" },
    { "src": "/lights", "dest": "/" },
    { "src": "/config", "dest": "/" }
  ],
  "env": {
    "CLIENTSECRET": "@hueup-clientsecret"
  }
}
